<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Test.Views.DetailPageJournalEntries">
    <!--ContentPage.ToolbarItems>
        <ToolbarItem Text="Edit" Clicked="ToolbarItem_Edit_Clicked"/>
        <ToolbarItem Text="Delete" Clicked="ToolbarItem_Delete_Clicked"/>
    </-->
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Orientation="Vertical" VerticalOptions="StartAndExpand">
                <Label FontSize="27" FontAttributes="Italic" Text="{Binding Writings}" />
                <StackLayout Orientation="Horizontal">
                    <Label Text="Written in : " FontSize="11"/>
                    <Label Text="{Binding CreateAt}" FontSize="11"/>
                </StackLayout>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>